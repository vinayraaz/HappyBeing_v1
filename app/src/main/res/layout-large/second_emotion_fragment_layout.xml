                android:id="@+id/emotionText_8"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scared"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
